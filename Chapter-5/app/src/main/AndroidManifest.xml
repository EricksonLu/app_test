<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.chapter5"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17" />


    <uses-permission android:name="android.permission.VIBRATE" />
<!--android：name 是为了后面的getApplication能找到！！！-->
    <application

        android:name="com.android.chapter5.activity.OnYourBike"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">
        <activity
            android:name="com.android.chapter5.activity.TimerActivity"
            android:label="@string/title_activity_timer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.chapter5.activity.SettingsActivity"
            android:label="@string/title_activity_activity_settings" >
        </activity>
    </application>

</manifest>
